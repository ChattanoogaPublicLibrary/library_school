<%= render 'shared/notice', :notice => notice %>

<section class="about">
  <h1>What's this about?</h1>
  <p>We want to see you learning what you're interested in and sharing what you know how to do. Check out what other people want to <%= link_to "learn", proposals_path %> and what others have offered to <%= link_to "teach", courses_path %></p>
</section>

<% @combined_proposals_courses.each do |c| %>
<a href="<%= proposal_course_pth(c) %>">
  <section class="post">
  <h1><%= c.class.to_s %></h1>
  <h1><%= c.name %></h1>
    <p><%= truncate(c.description, :length => 120) %></p>
    <p class="votes">Votes: <%= c.votes.count %></p>
  </section>
</a>

<% end %>

<%= paginate @combined_proposals_courses %>
