<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :minimum_class_size %>
    <%= f.input :maximum_class_size %>
    <%= f.input :proposal_id, :as => :hidden, :input_html => { :value => params[:proposal] } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'button' %>
  </div>
<% end %>
